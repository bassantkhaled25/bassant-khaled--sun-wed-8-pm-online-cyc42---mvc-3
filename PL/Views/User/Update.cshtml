@model UserViewModel                                       

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit User</h1>

<br />
<br />

<form asp-action="Update">
    <div asp-validation-summary="All"></div>           @*  list of errors *@

    <input hidden asp-for="Id" />
    <div class="form-group">
        <label class="col-form-label" asp-for="@Model.UserName"></label>
        <input class="form-control" asp-for="@Model.UserName"/>
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>

    </div>

    <br/>
    <input type="submit" value="Save" class="btn btn-primary" /> 
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>


