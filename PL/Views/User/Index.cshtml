@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "All Users";

}
<h1>All Users</h1>
<br />
<br />

<div class="mt-3 row justify-content-center align-items-center">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input class="form-control" name="SearchValue" placeholder="Search By Email" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>
</div>

@if(Model?.Count() > 0)
{
    <table class="mt-3 table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U => U.Id)</td>             @*displaynamefor *@
                <td>@Html.DisplayNameFor(U => U.UserName)</td>           
                <td>@Html.DisplayNameFor(U => U.Email)</td>        
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>

            @foreach (var user in Model)
            {                                                          @* displayfor *@
                <tr>
                    <td>@Html.DisplayFor(m => user.Id)</td>
                    <td>@Html.DisplayFor(m => user.UserName)</td>
                    <td>@Html.DisplayFor(m => user.Email)</td>
                    <partial name="_ActionButtonsPartialView" model="@user.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>There is No Users</h3>
    </div>
}