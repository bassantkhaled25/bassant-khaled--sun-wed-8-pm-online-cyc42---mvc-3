
@model IEnumerable<IdentityRole>


    @{
        ViewData["Title"] = "All Roles";

    }
    <h1>All Roles</h1>
    <br />
    <br />

    <a asp-action="Create" class="btn btn-primary">Create New Role</a>
    <br />
    <br/>
 

    @if (Model.Count() > 0)
    {
        <table class="mt-3 table table-striped table-hover">
            <thead>
                <tr>
                    <td>@Html.DisplayNameFor(M => M.Id)</td>
                    <td>@Html.DisplayNameFor(M => M.Name)</td>
                    <td>Details</td>
                    <td>Update</td>
                    <td>Delete</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(M => item.Id)</td>
                        <td>@Html.DisplayFor(M => item.Name)</td>


                        <partial name="_ActionButtonsPartialView" model="@item.Id" />
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="mt-4 alert alert-warning">
            <h3>There is No Roles</h3>
        </div>
    }
