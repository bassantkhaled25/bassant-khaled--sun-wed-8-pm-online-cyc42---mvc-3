@model RoleViewModel

@{
    ViewData["Title"] = "Update";
}

<h1>Edit Role</h1>

<br />
<br />

<form asp-action="Update">
    <div asp-validation-summary="All"></div> 

    <input hidden asp-for="Id" />

    <partial name="PartialViews/Create_Edit_partialview" />


    <div class="my-3">
        <a class="btn btn-info" asp-action="AddOrRemoveUsers" asp-controller="Role" asp-route-roleId="@Model.Id">Add Or Remove Users</a>
    </div>

    <input type="submit" value="Save" class="btn btn-primary"/> 
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>
