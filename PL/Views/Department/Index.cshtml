@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}


@if (Model.Count() > 0)
{
    <table class="mt-5 table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D => D.code)</td>
                <td>@Html.DisplayNameFor(D => D.Name)</td>
                <td>@Html.DisplayNameFor(D => D.CreatedAt)</td>
                <td>Details</td>                            @*  buttons *@
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var deparment in Model)
            {
                <tr>
                    <td>@deparment.code</td>
                    <td>@deparment.Name</td>
                    <td>@deparment.CreatedAt</td>

                    <td>
                        <a asp-action="Details" asp-route-id ="department.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>

                    <td>
                        <a asp-action="Update" asp-route-id="department.Id" class="btn btn-success">
                            <i class="fas fa-eye"></i> Update
                        </a>
                    </td>

                    <td>
                        <a asp-action="Delete" asp-route-id="department.Id" class="btn btn-danger">
                            <i class="fas fa-eye"></i> Delete
                        </a>
                    </td>


                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>there is No Departments </h3>
    </div>
}
