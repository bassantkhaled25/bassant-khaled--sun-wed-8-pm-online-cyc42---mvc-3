@model DepartmentDto


@{
    ViewData["Title"] = "Create";
}


<h1>Craete New Department</h1>


<form asp-action="Create" , asp-controller="Department">
                                                                    @* action (form) => (post)  *@    @* action (create)  //default for form method is (post) *@

    <div class="form-group">
        <label class="col-form-label" asp-for="code"></label>          
        <input class="form-control" asp-for="code" />
        <span asp-validation-for="code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
