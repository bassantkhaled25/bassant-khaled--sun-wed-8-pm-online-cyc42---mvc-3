@model Department


@{
    ViewData["Title"] = "Update";
}


<form asp-action="Update"  asp-controller="Department">
                                                              @* action (form) => (post)  *@    @* action (update)  //default for form method is (post) *@

    <div class="form-group">
        <label class="col-form-label" asp-for="code"></label>          
        <input class="form-control" asp-for="code" />
        <span asp-validation-for="code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

  <br />                                                                     @* break *@

    <input type="submit" value="Update" class="btn btn-primary" />            @* call action (update) *@
    <a asp-action="Index" class="btn btn-light">Back To List</a>              @* back to list *@
</form>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />                          @*  partial view *@
}
