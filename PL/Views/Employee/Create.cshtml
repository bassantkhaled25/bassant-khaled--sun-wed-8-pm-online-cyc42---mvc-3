@model Employee


@{
    ViewData["Title"] = "Create";
}


<h1>Craete New Employee</h1>


<form asp-action="Create" , asp-controller="Employee">
                                                                 @* action (form) => (post)  *@    @* action (create)  //default for form method is (post) *@

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Age"></label>
        <input class="form-control" asp-for="Age" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Address"></label>
        <input class="form-control" asp-for="Address" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="HiringDate"></label>
        <input class="form-control" asp-for="HiringDate" />
        <span asp-validation-for="HiringDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input class="form-control" asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

    <div class="form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input class="form-control" asp-for="Salary" />
       <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <br />                                                                     @* break *@

    <input type="submit" value="Add" class="btn btn-primary" />            @* call action (create) *@
    <a asp-action="Index" class="btn btn-light">Back To List</a>           @* back to list *@
</form>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />                          @*  partial view *@
}
