@model SignUpViewModel

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/AuthenticationLayOut.cshtml";
}

<h1>SignUp</h1>

 
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SignUp" method="post">

			<div asp-validation-summary="All"></div>                       @* لو حاجه من ال validations اللي حطيتها وعملت وانا بكتب غلط او مدخلتهاش صح هيظهرلي الايرورز سببها ايه
 *@

			<input Type="text" asp-for="FirstName" placeholder="First Name" required="" class="form-control">
			<br />
			<input Type="text" asp-for="LastName" placeholder="Last Name" required="" class="form-control">
			<br />
			<input Type="text" asp-for="Email" placeholder="Email" required="" class="form-control">
			<br />
			<input Type="password" asp-for="Password" placeholder="Password"  class="form-control">
			<br />
			<input Type="password" asp-for="confirmPassword" placeholder="Confirm Password"  class="form-control">
			<br />

			<div class="wthree-text">
				<label class="anim">
					<input asp-for="IsActive" input type="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>

			<input type="submit" value="SignUp">
		</form>
		<p class="text-black">Do you have an Account? <a asp-action="SignIn"> Login Now!</a></p>
	</div>
</div>


