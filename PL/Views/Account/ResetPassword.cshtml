@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/AuthenticationLayOut.cshtml";
}

<h1>Reset Password</h1>

    <form asp-action="ResetPassword" method="post">
			<input type="hidden" asp-for="Email" />
			<input type="hidden" asp-for="Token" />

			<div asp-validation-summary="All"></div>

			<input type="password" asp-for="NewPassword" placeholder="NewPassword" class="form-control">
			<span asp-validation-for="NewPassword"></span>
			<br />

			<input type="password" asp-for="ConfirmPassword" placeholder="ConfirmPassword" class="form-control">
          	<span asp-validation-for="ConfirmPassword"></span>
			<br/>

			<input type="submit" value="change Password" class="btn btn-primary">
		</form>
