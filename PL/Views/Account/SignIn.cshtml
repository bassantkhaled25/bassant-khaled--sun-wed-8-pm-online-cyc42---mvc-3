@model SignInViweModel


@{
	ViewData["Title"] = "SignIn";
	Layout = "~/Views/Shared/AuthenticationLayOut.cshtml";
}

<h1>SignIn</h1>

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SignIn" method="post">

			<div asp-validation-summary="All"></div>         @* vaildation summary *@

			<input type="email" asp-for="Email" placeholder="Email" class="form-control">
			<span asp-validation-for="Email"></span>

		      <br/>
			<input type="Password" asp-for="Password" placeholder="Password" class="form-control">
			<span asp-validation-for="Password"></span>
		      <br/>

			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RemeberMe" class="checkbox" class="form-control">
					<span> keep me signed in </span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SignIn">
			
		</form>
		<p class="text-white">Don't have an Account? <a asp-action="SignUp"> SignUp Now!</a></p>  @*  if dont have account => action (signup) *@
	   <br/>
		<p class="text-white"><a asp-action="ForgetPassword"> Forget Password!</a></p>      @* بيدور ع اكشن forget pass *@
	</div>
</div>

